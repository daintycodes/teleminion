# =============================================================================
# TeleMinion V2 - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram API (Required)
# Get these from https://my.telegram.org/apps
# -----------------------------------------------------------------------------
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# -----------------------------------------------------------------------------
# Authentication (Required for production)
# Generate password hash with: python -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt()).decode())"
# -----------------------------------------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SESSION_SECRET_KEY=change-this-to-a-random-32-char-string

# -----------------------------------------------------------------------------
# Backup MinIO (Optional - separate instance for pg_dump backups)
# Leave empty to disable backups
# -----------------------------------------------------------------------------
BACKUP_MINIO_ENDPOINT=backup-minio.example.com:9000
BACKUP_MINIO_ACCESS_KEY=backupadmin
BACKUP_MINIO_SECRET_KEY=backupsecret
BACKUP_MINIO_BUCKET=teleminio-backups
BACKUP_MINIO_SECURE=true

# -----------------------------------------------------------------------------
# n8n Integration (Optional)
# Webhook URL called after each file is uploaded to MinIO
# -----------------------------------------------------------------------------
PROCESSING_WEBHOOK_URL=https://n8n.example.com/webhook/teleminio-upload

# -----------------------------------------------------------------------------
# External Services Reference (for n8n workflow configuration)
# -----------------------------------------------------------------------------
WEAVIATE_URL=http://weaviate:8080
WHISPER_URL=http://whisper:9000

# -----------------------------------------------------------------------------
# Self-Healing (Optional)
# Default: 3600 seconds (hourly)
# -----------------------------------------------------------------------------
SELF_HEALING_INTERVAL_SECONDS=3600

# -----------------------------------------------------------------------------
# Scanner Settings (Optional)
# -----------------------------------------------------------------------------
SCAN_INTERVAL=60
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Domain Configuration (for Coolify/Traefik)
# -----------------------------------------------------------------------------
APP_DOMAIN=tgdatapipeline.cashab.tech
MINIO_DOMAIN=tgminio.cashab.tech
